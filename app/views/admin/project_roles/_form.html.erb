<%= render 'shared/title/form', :target => @project_role %>

<div id="content">
	<p class="success"><span><%= flash[:notice] %></span></p>
	
	<% form_for ([:admin, @project_role]) do |f| %>
        <%= render "shared/error_messages", :target => @project_role %>

        <p>
            <%= f.label :name %><br/>
            <%= f.text_field :name %>
        </p>

		<p>
          	<%= f.label :manager_role? %>
          	<%= f.check_box :manager %>
		</p>

        <p>
            <%= f.label :role_description %><br/>
            <%= f.text_area :role, :size => "35x4" %>
        </p>

        <p>
          <%= f.submit 'Save', :class=> 'save_btn' %>
        </p>
     <% end %>
     <%= button_to 'Cancel', admin_project_roles_path, :confirm => "Are you sure?", :method => :get, :class=> 'cancel_btn' %>	
</div>

<div id="sidebar">
	<ul>
      <li><%= link_to 'Project Roles', admin_project_roles_path, :class => 'list' %></li>
    </ul>
</div>  