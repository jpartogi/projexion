<div id="content">
  <div id="sprint">
    <% form_for @sprint, :url => project_sprint_path(@project.code, @sprint) do |f| %>
        <%= f.error_messages %>

        <p>
          <%= f.label :start_date %><br />
          <%= f.date_select :start_date, :order => [:day, :month, :year] %>
        </p>

        <p>
          <%= f.label :end_date %><br />
          <%= f.date_select :end_date, :order => [:day, :month, :year] %>
        </p>

        <p>
          <%= f.label :release %><br/>
          <%= f.collection_select(:release_id, @releases, :id, :version_number, {:include_blank => true}) %>
        </p>

        <p>
          <%= f.label :goal, 'Sprint goal' %><br />
          <%= f.text_field :goal, :size => 45 %>
        </p>

        <p>
          <%= f.submit 'Save', :class=> 'save_btn' %>
        </p>
     <% end %>
     <%= button_to 'Cancel', project_sprints_path(@project.code), :confirm => "Are you sure?", :method => :get, :class=> 'cancel_btn' %>
  </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
  </ul>
</div>